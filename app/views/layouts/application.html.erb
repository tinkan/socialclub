<!DOCTYPE html>
<html>
<head>
  <title>Socialclub</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar"  data-target=".nav-collapse"	
      </a>
      <a class="brand" href="#">Socialclub</a>
      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to "Browse Products", products_path %></li>
          
		  <% if user_signed_in? %>
		   <li><%= link_to "My Profile", current_user %>
			<li><div><%= current_user.email %></div></li>
             <li><%= link_to "Sign out", destroy_user_session_path  %>	</li>
		     <% else %>
             <li><%= link_to "S'inscrire", new_user_registration_path %>  </li>
			<li><%= link_to "S'authentifier", new_user_session_path %> </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>


</div>


<%= yield %>

</body>
</html>
