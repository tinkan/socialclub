<!DOCTYPE html>
<html>
<head>
  <title>Socialclub</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar"  data-target=".nav-collapse"	
      </a>
      <a class="brand" href="#">Socialclub</a>
      <div class="nav-collapse">
		<ul class="nav">
		  <li><%= link_to "Accueil", products_path %></li>
          <li  class="dropdown">
			<a  href="#" class="dropdown-toggle" data-toggle="dropdown"> 

			Parcourir par cat√©gories<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><a href="#"><%= link_to "Vehicules", products_path(category: 1) %></a></li>
			  <li><a href="#"><%= link_to "Informatique", products_path(category: 2) %></a></li>
			  <li><a href="#"><%= link_to "Hi Fi", products_path(category: 3) %></a></li>
              <li class="divider"></li>
              <li><a href="#"><%= link_to "ALL categories", products_path  %></a></li>
            </ul>
          </li>

		</ul>
		 <ul class="nav pull-right">          
		  <% if user_signed_in? %>
	
		     <% else %>
             <li align="right"><%= link_to "S'inscrire", new_user_registration_path %>  </li>
			 <li><%= link_to "S'authentifier", new_user_session_path %> </li>
			 
          <% end %>
        </ul>
      </div>
	  
	    <% if user_signed_in? %>
			<div class="nav-collapse collapse">
            <ul class="nav pull-right">
            <li  class="dropdown">
	
			<a  href="#" class="dropdown-toggle" data-toggle="dropdown"> <i class="icon-user icon-white"></i>

			<%= current_user.email %><b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><a href="#"><%= link_to "Mon Profil", current_user %></a></li>
              <li class="divider"></li>
              <li><a href="#"><%= link_to "Deconnexion", destroy_user_session_path  %></a></li>
            </ul>
			
          </li>
		 	
        </ul>
      </div><!--/.nav-collapse -->
	  
	             		   					
          <% end %>
		  
		  

    </div>

      	    
		
  </div>
  
  
</div>


</div>

 <% if user_signed_in? %>

<!---<p align="right"> Balance : <%= current_user.sold %> BTC</p>--->

  
 <% @orders = Order.all %>
  <% notif=0 %>
      <% @orders.each do |order|  %>
       <tr>
	    <% if order.seller == current_user.id %>
		  <% if current_user.last_sign_in_at <= order.created_at %>
		    <% notif += 1 %>
            <p align="right"> Notification <%= notif %> <%= link_to 'Voir',  order_path(order) %></p>

	        <%end %>
          <% end %>
	     <% end %> 
 <% end %>

<%= yield %>

</body>
</html>

